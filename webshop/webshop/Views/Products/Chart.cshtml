<script src="https://cdn.jsdelivr.net/npm/chart.js@3.3.0/dist/chart.min.js"></script>

<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>

<div width="400" height="400">
    <canvas id="myChart"></canvas>
</div>

<script>
    //Code der ausgeführt wird wenn die Seite fertig geladen ist
    $(document).ready(function () {
        //Daten abrufen
        $.ajax({ //Mittels AJAX einen GET Request abschicken
            url: "/Products/GetChartData",
            success: function (json) { //Hier werden die Daten "verarbeitet"
                paintChart(json.Labels, json.decimalValue);
            }
        });
    });

    function paintChart(myLabels, myData) {
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: myLabels,
                datasets: [{
                    label: 'Sum price of sales in Euro',
                    data: myData,
                    backgroundColor: [
                        'rgba(255, 49, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(111, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(111, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
</script>