@model webshop.ViewModel.OrderCustomerOrderLine
@{
    ViewBag.Title = "Thank you for your Order";
}

@Html.HiddenFor(modelItem => Model.Order_Id)
<div class="col-lg-12">

    <h2>Products</h2>
    <table class="table">
        <tr>
            <th>

            </th>
            <th>
                ProduktNr.
            </th>
            <th>
                Productname
            </th>
            <th>
                Manufacturer
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>


        @for (var i = 0; i < Model.OrderLineProductList.Count(); i++)
