    <hr />
    <div class="col-md-6">
        @Html.ActionLink("Impressum", "Impressum", "Home", null, new { @class = "btn btn-primary btn-large" })
    </div>

    <div class="col-md-6" style="text-align: right">
        @Html.ActionLink("AGB", "AGB", "Home", null, new { @class = "btn btn-primary btn-large" })
    </div>
   



