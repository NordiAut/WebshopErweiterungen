@using System.Activities.Statements
@model webshop.ViewModel.FilterAndSearchViewModel

@{
    ViewBag.Title = "Product";
}

<h2>Product</h2>

<br />
@using (Html.BeginForm("Product", "Products", FormMethod.Get))
{
    <label>   Search:</label>
    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <label>   Filter:</label>
    @Html.DropDownListFor(x => x.CategoryFilter, Model.CategoryListItem, "Category")
    @Html.DropDownListFor(x => x.ManufactorerFilter, Model.ManufacturerListItem, "Manufacturer")

    <input type="submit" value="Search" />
}




<table class="table">
    <tr>
        <th>

        </th>
        <th>
            Product
        </th>
        <th>
            Price
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.ImagePath)" width="50" height="60">

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetUnitPrice) €
            </td>

            <td>
                
                @Html.ActionLink("Add", "Add", new { id = item.Product_ID }) |

                @Html.ActionLink("Details", "Details", new { id = item.Product_ID })

            </td>
        </tr>
    }

</table>
