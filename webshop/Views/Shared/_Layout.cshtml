<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The future is now</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Electronic4You", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li>@Html.ActionLink("Products", "Product", "Products")</li>
                    <li>@Html.ActionLink("OrderLines", "Index", "OrderLines")</li>

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (Session["FullName"] == null)
                    {
                    <li>
                        
                        @Html.ActionLink("Shopping Cart", "Login", "Home")
                    </li>
                    }

                    @if (Session["FullName"] != null)
                    {
                        <li>
                            @Html.ActionLink("Shopping Cart", "ShoppingCart", "Products")
                        </li>
                    }
                    <li class="nav-item dropdown">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            @if (Session["FullName"] == null)
                            {
                                <li>
                                    @Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                                <li>
                                    @Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            }

                            @if (Session["FullName"] != null)
                            {

                                <li>
                                    @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "dropdown-item" })
                                </li>

                            }
                        </ul>
                    </li>
                    </li>


                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
